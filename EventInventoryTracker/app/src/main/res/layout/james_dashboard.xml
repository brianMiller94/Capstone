<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="com.inventory_tracker.company_name.eventinventorytracker.Dashboard">

    <Button
        android:id="@+id/dashboard_viewItems_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_inventory" />
    <Button
        android:id="@+id/createEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Event" />

    <Button
        android:id="@+id/dashboard_newItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Item"/>
    <Button
        android:id="@+id/dashboard_newAccessory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Accessory"/>
    <Button
        android:id="@+id/dashboard_newBundle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Bundle"/>

    <Button
        android:id="@+id/createDummyData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Dummy Data"/>

    <Button
        android:id="@+id/syncWithAmazon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amazon Sync"/>

    <Button
        android:id="@+id/dashboard_viewDatabase_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Database" />

    <ProgressBar
        android:id="@+id/syncProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>


</LinearLayout>
